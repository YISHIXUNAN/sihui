{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "importHelpers": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "../../",
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["src/*"],
            "@sihui": ["src/.sihui/core"],
            "@pages/*": ["src/pages/*"],
            "@sihui/component": ["src/.sihui/core/component"]
        }
    },
    "include": ["../../**/*.d.ts", "../../**/*.ts", "../../**/*.tsx"]
}
